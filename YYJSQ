    <script>
        // 显示状态信息
        function showStatus(message, type = 'info') {
            const statusEl = document.getElementById('status');
            statusEl.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i> ${message}`;
            statusEl.className = `status ${type}`;
        }
        
        // 显示复制成功提示
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const icon = toast.querySelector('i');
            const text = toast.querySelector('span');
            
            // 设置图标和颜色
            if (type === 'success') {
                icon.className = 'fas fa-check-circle';
                toast.className = 'toast success';
            } else if (type === 'error') {
                icon.className = 'fas fa-exclamation-circle';
                toast.className = 'toast error';
            } else {
                icon.className = 'fas fa-info-circle';
                toast.className = 'toast info';
            }
            
            text.textContent = message;
            toast.classList.add('show');
            
            // 3秒后自动隐藏
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // 显示/隐藏加载动画
        function toggleLoader(show) {
            document.getElementById('loader').style.display = show ? 'block' : 'none';
        }
        
        // 显示配置部分，隐藏结果部分
        function showConfigSection() {
            document.getElementById('configSection').style.display = 'block';
            document.getElementById('resultsSection').classList.remove('active');
            setTimeout(() => {
                document.getElementById('configSection').style.opacity = '1';
            }, 10);
        }
        
        // 显示结果部分，隐藏配置部分
        function showResultsSection() {
            document.getElementById('configSection').style.display = 'none';
            document.getElementById('configSection').style.opacity = '0';
            document.getElementById('resultsSection').classList.add('active');
        }
        
        // 复制文本到剪贴板
        function copyToClipboard(text, showNotification = true) {
            navigator.clipboard.writeText(text).then(() => {
                if (showNotification) {
                    showToast('已复制到剪贴板!', 'success');
                }
            }).catch(err => {
                console.error('复制失败:', err);
                if (showNotification) {
                    showToast('复制失败，请手动复制', 'error');
                }
            });
        }
        
        // Base64编码（URL安全）
        function base64UrlEncode(str) {
            const base64 = btoa(str);
            return base64.replace(/\+/g, '-').replace(/\//g, '_').replace(/=+$/, '');
        }
        
        // 使用代理URL解决跨域问题
        function getProxyUrl(originalUrl) {
            // 注意：这里使用的是公共代理，仅用于测试
            // 生产环境建议使用自己的代理服务器
            const proxyUrls = [
                'https://api.allorigins.win/raw?url=',
                'https://corsproxy.io/?',
                'https://cors-anywhere.herokuapp.com/'
            ];
            
            // 使用第一个可用的代理
            const proxy = proxyUrls[0];
            return proxy + encodeURIComponent(originalUrl);
        }
        
        // 尝试使用代理获取数据
        async function fetchWithProxy(apiUrl) {
            const useProxy = document.getElementById('useProxy').checked;
            
            if (useProxy) {
                // 使用代理
                const proxyUrl = getProxyUrl(apiUrl);
                showStatus('正在通过代理获取数据...', 'info');
                
                try {
                    const response = await fetch(proxyUrl, {
                        headers: {
                            'Accept': 'application/json'
                        }
                    });
                    
                    if (!response.ok) {
                        throw new Error(`代理请求失败: ${response.status}`);
                    }
                    
                    return await response.json();
                } catch (proxyError) {
                    console.warn('代理失败，尝试直接请求:', proxyError);
                    // 如果代理失败，尝试直接请求（可能会失败，但试试看）
                }
            }
            
            // 直接请求（在GitHub预览中会失败，但在本地或GitHub Pages中可能成功）
            showStatus('正在直接获取数据...', 'info');
            const response = await fetch(apiUrl);
            if (!response.ok) {
                throw new Error(`直接请求失败: ${response.status}`);
            }
            return await response.json();
        }
        
        // AES-CBC解密函数（使用Web Crypto API）
        async function decryptAesCbc(encryptedText, key, iv) {
            try {
                // 将Base64字符串转换为ArrayBuffer
                const encryptedData = Uint8Array.from(atob(encryptedText), c => c.charCodeAt(0));
                
                // 导入密钥
                const cryptoKey = await crypto.subtle.importKey(
                    'raw',
                    new TextEncoder().encode(key),
                    { name: 'AES-CBC' },
                    false,
                    ['decrypt']
                );
                
                // 解密
                const decryptedData = await crypto.subtle.decrypt(
                    {
                        name: 'AES-CBC',
                        iv: new TextEncoder().encode(iv)
                    },
                    cryptoKey,
                    encryptedData
                );
                
                // 将ArrayBuffer转换为字符串
                return new TextDecoder().decode(decryptedData);
            } catch (error) {
                console.error('解密失败:', error);
                throw new Error('AES解密失败: ' + error.message);
            }
        }
        
        // 提取并格式化数据
        function extractAndFormatData(data) {
            const results = [];
            
            // 正则表达式匹配IP、端口、方法和密码
            const serverPattern = /SS\s*=\s*ss,\s*([\d.]+),\s*(\d+),\s*encrypt-method=([\w-]+),\s*password=(\w+)/g;
            let match;
            
            while ((match = serverPattern.exec(data)) !== null) {
                const ip = match[1];
                const port = match[2];
                const method = match[3];
                const password = match[4];
                
                // 构建SS链接
                const ssUrl = `${method}:${password}@${ip}:${port}`;
                const encoded = base64UrlEncode(ssUrl);
                
                // 尝试提取城市信息
                let city = "未知";
                const cityPattern = new RegExp(`${ip}.*?"city":"([^"]+)"`, 's');
                const cityMatch = cityPattern.exec(data);
                if (cityMatch && cityMatch[1]) {
                    city = cityMatch[1];
                }
                
                results.push({
                    fullUrl: `ss://${encoded}#${encodeURIComponent(city)}`,
                    ip,
                    port,
                    method,
                    password,
                    city
                });
            }
            
            return results;
        }
        
        // 渲染结果到页面
        function renderResults(results) {
            const resultsList = document.getElementById('resultsList');
            const resultsCount = document.getElementById('resultsCount');
            
            // 更新结果数量
            resultsCount.textContent = `${results.length} 个`;
            
            if (results.length === 0) {
                resultsList.innerHTML = `
                    <div class="no-results">
                        <i class="fas fa-search"></i>
                        <p>未找到任何配置</p>
                    </div>
                `;
                return;
            }
            
            resultsList.innerHTML = '';
            
            results.forEach((result, index) => {
                const resultEl = document.createElement('div');
                resultEl.className = 'result-item';
                
                resultEl.innerHTML = `
                    <div>
                        <span class="result-city">${result.city}</span>
                        <span class="result-method">${result.method}</span>
                        <div style="font-size: 12px; color: #8e8e93; margin-top: 5px;">
                            ${result.ip}:${result.port}
                        </div>
                        <div class="result-url">${result.fullUrl}</div>
                        <button class="copy-btn" data-url="${result.fullUrl}">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                `;
                
                resultsList.appendChild(resultEl);
            });
            
            // 添加复制按钮事件监听
            document.querySelectorAll('.copy-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    const url = btn.getAttribute('data-url');
                    copyToClipboard(url);
                    
                    // 添加动画效果
                    const icon = btn.querySelector('i');
                    const originalClass = icon.className;
                    icon.className = 'fas fa-check';
                    setTimeout(() => {
                        icon.className = originalClass;
                    }, 1000);
                });
            });
        }
        
        // 一键复制全部
        function copyAllResults(results) {
            if (results.length === 0) {
                showToast('没有可复制的内容', 'error');
                return;
            }
            
            const allUrls = results.map(r => r.fullUrl).join('\n');
            copyToClipboard(allUrls);
            
            // 添加按钮动画效果
            const copyAllBtn = document.getElementById('copyAllBtn');
            const originalText = copyAllBtn.innerHTML;
            copyAllBtn.innerHTML = '<i class="fas fa-check"></i> 已复制全部';
            copyAllBtn.style.background = 'linear-gradient(135deg, #2dc143, #2bc152)';
            
            setTimeout(() => {
                copyAllBtn.innerHTML = originalText;
                copyAllBtn.style.background = 'linear-gradient(135deg, #5c5c5e, #7c7c7e)';
            }, 2000);
        }
        
        // 主函数：获取和解密数据
        async function fetchAndDecrypt() {
            // 获取输入值
            const apiUrl = document.getElementById('apiUrl').value;
            const key = document.getElementById('encryptionKey').value;
            const iv = document.getElementById('encryptionIV').value;
            
            // 验证输入
            if (!apiUrl || !key || !iv) {
                showStatus('请填写所有必填字段', 'error');
                showToast('请填写所有必填字段', 'error');
                return;
            }
            
            // 显示加载动画
            toggleLoader(true);
            showStatus('正在获取数据...', 'info');
            
            try {
                // 使用fetchWithProxy获取数据（添加超时控制）
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 15000);
                
                let data;
                try {
                    data = await fetchWithProxy(apiUrl);
                } finally {
                    clearTimeout(timeoutId);
                }
                
                // 检查是否有servers字段
                if (!data.servers) {
                    throw new Error('API响应中没有找到servers字段');
                }
                
                showStatus('数据获取成功，正在解密...', 'info');
                
                // 解密数据
                const decryptedData = await decryptAesCbc(data.servers, key, iv);
                
                // 提取和格式化数据
                const results = extractAndFormatData(decryptedData);
                
                // 渲染结果
                renderResults(results);
                
                // 保存结果到全局变量，供一键复制使用
                window.currentResults = results;
                
                // 切换到结果视图
                showResultsSection();
                
                showStatus(`成功提取 ${results.length} 个配置`, 'success');
                showToast(`成功提取 ${results.length} 个配置`, 'success');
                
            } catch (error) {
                console.error('处理失败:', error);
                
                if (error.name === 'AbortError') {
                    showStatus('请求超时，请检查网络', 'error');
                    showToast('请求超时，请检查网络', 'error');
                } else if (error.message.includes('解密失败')) {
                    showStatus('解密失败，请检查密钥和IV', 'error');
                    showToast('解密失败，请检查密钥和IV', 'error');
                } else if (error.message.includes('HTTP错误')) {
                    showStatus(`网络请求失败: ${error.message}`, 'error');
                    showToast(`网络请求失败: ${error.message}`, 'error');
                } else {
                    showStatus(`错误: ${error.message}`, 'error');
                    showToast(`错误: ${error.message}`, 'error');
                }
                
                // 如果是跨域错误，给出具体建议
                if (error.message.includes('Failed to fetch') || error.message.includes('CORS')) {
                    showStatus('提示: 跨域请求被阻止。已启用代理模式，请重试。', 'info');
                }
            } finally {
                // 隐藏加载动画
                toggleLoader(false);
            }
        }
        
        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', () => {
            // 提取配置按钮事件
            document.getElementById('fetchBtn').addEventListener('click', fetchAndDecrypt);
            
            // 返回按钮事件
            document.getElementById('backBtn').addEventListener('click', showConfigSection);
            
            // 一键复制全部按钮事件
            document.getElementById('copyAllBtn').addEventListener('click', () => {
                if (window.currentResults && window.currentResults.length > 0) {
                    copyAllResults(window.currentResults);
                } else {
                    showToast('请先提取配置', 'error');
                }
            });
            
            // 初始显示状态
            showStatus('点击上方按钮开始提取', 'info');
            
            // 添加测试按钮（用于调试）
            const testBtn = document.createElement('button');
            testBtn.className = 'btn btn-secondary';
            testBtn.style.marginTop = '10px';
            testBtn.innerHTML = '<i class="fas fa-vial"></i> 测试API连接';
            testBtn.onclick = async () => {
                const apiUrl = document.getElementById('apiUrl').value;
                showStatus('正在测试API连接...', 'info');
                
                try {
                    const response = await fetch(getProxyUrl(apiUrl));
                    if (response.ok) {
                        showStatus('API连接正常 ✓', 'success');
                    } else {
                        showStatus(`API连接失败: ${response.status}`, 'error');
                    }
                } catch (error) {
                    showStatus(`测试失败: ${error.message}`, 'error');
                }
            };
            
            document.getElementById('configSection').appendChild(testBtn);
        });
    </script>
</body>
</html>
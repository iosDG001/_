    <script>
        function toggleSection(element) {
            const section = element.parentElement;
            const icon = element.querySelector('.toggle-icon');
            
            section.classList.toggle('collapsed');
            icon.style.transform = section.classList.contains('collapsed') ? 'rotate(-90deg)' : 'rotate(0)';
        }

        function convertConfig() {
            const input = document.getElementById('config-input').value.trim();
            const status = document.getElementById('status-message');
            const nodesContainer = document.getElementById('nodes-container');
            const nodeCount = document.getElementById('node-count');
            
            if (!input) {
                showStatus('请输入配置', 'error');
                return;
            }
            
            try {
                const config = JSON.parse(input);
                const nodes = extractNodes(config);
                
                if (nodes.length === 0) {
                    showStatus('未找到可用的代理节点', 'error');
                    return;
                }
                
                displayNodes(nodes);
                nodeCount.textContent = nodes.length;
                showStatus(`成功提取 ${nodes.length} 个节点`, 'success');
                
            } catch (error) {
                showStatus(`配置解析失败: ${error.message}`, 'error');
                console.error('解析错误:', error);
            }
        }

        function extractNodes(config) {
            const nodes = [];
            const proxyTypes = ['vless', 'vmess', 'trojan', 'shadowsocks'];
            
            if (!config.outbounds) {
                throw new Error('配置中未找到outbounds字段');
            }
            
            config.outbounds.forEach(node => {
                if (proxyTypes.includes(node.type)) {
                    try {
                        const link = convertNodeToLink(node);
                        if (link) {
                            nodes.push({
                                tag: node.tag,
                                type: node.type,
                                server: node.server,
                                port: node.server_port,
                                link: link
                            });
                        }
                    } catch (e) {
                        console.warn(`节点 ${node.tag} 转换失败:`, e.message);
                    }
                }
            });
            
            return nodes;
        }

        function convertNodeToLink(node) {
            switch(node.type) {
                case 'vless':
                    return convertVlessNode(node);
                case 'vmess':
                    return convertVmessNode(node);
                case 'trojan':
                    return convertTrojanNode(node);
                case 'shadowsocks':
                    return convertSSNode(node);
                default:
                    throw new Error(`不支持的协议类型: ${node.type}`);
            }
        }

        function convertVlessNode(node) {
            const required = ['uuid', 'server', 'server_port'];
            const missing = required.filter(field => !node[field]);
            if (missing.length > 0) {
                throw new Error(`缺少必要参数: ${missing.join(', ')}`);
            }

            const uuid = node.uuid;
            const server = node.server;
            const port = node.server_port;
            const flow = node.flow || 'xtls-rprx-vision';
            const tls = node.tls || {};
            const reality = tls.reality || {};
            const utls = tls.utls || {};

            const fingerprint = utls.fingerprint || 'chrome';
            const publicKey = reality.public_key || '';
            const shortId = reality.short_id || '';
            const sni = tls.server_name || server;

            let link = `vless://${uuid}@${server}:${port}/?type=tcp&flow=${flow}&encryption=none&security=reality&sni=${sni}&fp=${fingerprint}`;
            
            if (publicKey) link += `&pbk=${publicKey}`;
            if (shortId) link += `&sid=${shortId}`;
            
            return link + `#${node.tag || 'VLESS节点'}`;
        }

        function convertVmessNode(node) {
            const uuid = node.uuid || node.id;
            const server = node.server;
            const port = node.server_port;
            
            if (!uuid || !server || !port) {
                throw new Error('缺少必要参数');
            }

            const vmessConfig = {
                v: "2",
                ps: node.tag || "VMess节点",
                add: server,
                port: port.toString(),
                id: uuid,
                aid: (node.alterId || 0).toString(),
                scy: node.security || "auto",
                net: node.transport || "tcp",
                type: node.header_type || "none",
                host: node.server_name || "",
                path: node.path || "",
                tls: node.tls ? "tls" : "",
                sni: node.tls?.server_name || ""
            };

            return "vmess://" + btoa(JSON.stringify(vmessConfig));
        }

        function convertTrojanNode(node) {
            const password = node.password;
            const server = node.server;
            const port = node.server_port;
            
            if (!password || !server || !port) {
                throw new Error('缺少必要参数');
            }

            const tls = node.tls || {};
            const utls = tls.utls || {};
            const fingerprint = utls.fingerprint || 'chrome';
            const sni = tls.server_name || server;

            return `trojan://${password}@${server}:${port}/?sni=${sni}&fp=${fingerprint}#${node.tag || 'Trojan节点'}`;
        }

        function convertSSNode(node) {
            const method = node.method;
            const password = node.password;
            const server = node.server;
            const port = node.server_port;
            
            if (!method || !password || !server || !port) {
                throw new Error('缺少必要参数');
            }

            const encodedPassword = btoa(`${method}:${password}`);
            return `ss://${encodedPassword}@${server}:${port}#${node.tag || 'SS节点'}`;
        }

        function displayNodes(nodes) {
            const container = document.getElementById('nodes-container');
            container.innerHTML = '';
            
            if (nodes.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-cloud-download-alt" style="font-size: 36px; margin-bottom: 10px;"></i>
                        <p>转换后的节点将在这里显示</p>
                    </div>
                `;
                return;
            }
            
            nodes.forEach((node, index) => {
                const nodeElement = document.createElement('div');
                nodeElement.className = 'node-item';
                nodeElement.innerHTML = `
                    <div class="node-header">
                        <span class="node-tag">${node.tag}</span>
                        <span class="node-type">${node.type.toUpperCase()}</span>
                    </div>
                    <div class="node-details">
                        ${node.server}:${node.port}
                    </div>
                    <div class="node-link" id="link-${index}">${node.link}</div>
                `;
                
                nodeElement.addEventListener('click', () => {
                    const linkElement = document.getElementById(`link-${index}`);
                    linkElement.style.display = linkElement.style.display === 'block' ? 'none' : 'block';
                    copyToClipboard(node.link);
                    showStatus('节点链接已复制到剪贴板', 'success');
                });
                
                container.appendChild(nodeElement);
            });
        }

        function copyAllNodes() {
            const nodes = document.querySelectorAll('.node-link');
            const allLinks = Array.from(nodes).map(node => node.textContent).join('\n\n');
            
            if (allLinks) {
                copyToClipboard(allLinks);
                showStatus('所有节点链接已复制到剪贴板', 'success');
            } else {
                showStatus('没有可复制的节点', 'error');
            }
        }

        function copyToClipboard(text) {
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
        }

        function showStatus(message, type) {
            const status = document.getElementById('status-message');
            status.textContent = message;
            status.className = 'status-message';
            status.classList.add(`status-${type}`);
            status.style.display = 'block';
            
            setTimeout(() => {
                status.style.display = 'none';
            }, 3000);
        }

        // 自动填充示例配置
        document.addEventListener('DOMContentLoaded', function() {
            const exampleConfig = {
                "outbounds": [
                    {
                        "type": "vless",
                        "tag": "示例节点",
                        "server": "example.com",
                        "server_port": 443,
                        "uuid": "908a3c3a-5ff4-46b2-920d-b38c53b6255f",
                        "flow": "xtls-rprx-vision",
                        "tls": {
                            "enabled": true,
                            "server_name": "example.com",
                            "reality": {
                                "enabled": true,
                                "public_key": "示例公钥",
                                "short_id": "示例ID"
                            },
                            "utls": {
                                "enabled": true,
                                "fingerprint": "chrome"
                            }
                        }
                    }
                ]
            };
            
            document.getElementById('config-input').value = JSON.stringify(exampleConfig, null, 2);
        });
    </script>
</body>

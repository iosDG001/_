        <div class="main-content">
            <div class="input-section">
                <div class="section-title" onclick="toggleSection(this)">
                    <span>输入Configs配置</span>
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </div>
                <div class="section-content">
                    <textarea class="config-input" id="config-input" placeholder="粘贴完整的Sing-box配置..."></textarea>
                    <button class="convert-btn" onclick="convertConfig()">
                        <i class="fas fa-sync-alt"></i> 转换配置
                    </button>
                    <div class="status-message" id="status-message"></div>

                    <button class="copy-all-btn" onclick="copyAllNodes()">
                        <i class="fas fa-copy"></i> 复制所有节点
                    </button>

                </div>
            </div>
            
            <div class="output-section">
                <div class="section-title" onclick="toggleSection(this)">
                    <span>生成的节点 <span class="node-count" id="node-count">0</span></span>
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </div>
                <div class="section-content">
                    <div class="nodes-container" id="nodes-container">
                        <div class="empty-state">
                            <i class="fas fa-cloud-download-alt" style="font-size: 36px; margin-bottom: 10px;"></i>
                            <p>转换后的节点将在这里显示</p>
                        </div>
                    </div>
                </div>
                <!-- 复制按钮移到section-content外部，确保折叠时仍然可见 -->
                <div class="action-buttons">

                </div>
            </div>

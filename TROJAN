    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const convertBtn = document.getElementById('convert-btn');
            const clearBtn = document.getElementById('clear-btn');
            const configInput = document.getElementById('config-input');
            const resultContainer = document.getElementById('result-container');
            const extractedInfo = document.getElementById('extracted-info');
            const trojanLink = document.getElementById('trojan-link');
            const copyBtn = document.getElementById('copy-btn');
            const errorMessage = document.getElementById('error-message');
            const successMessage = document.getElementById('success-message');
            const exampleItems = document.querySelectorAll('.example-item');
            
            // äº‹ä»¶ç›‘å¬
            convertBtn.addEventListener('click', convertConfig);
            clearBtn.addEventListener('click', clearInput);
            copyBtn.addEventListener('click', copyTrojanLink);
            
            // ç¤ºä¾‹ç‚¹å‡»äº‹ä»¶
            exampleItems.forEach(item => {
                item.addEventListener('click', function() {
                    const exampleText = this.getAttribute('data-example');
                    configInput.value = exampleText;
                    showSuccess('ç¤ºä¾‹å·²å¡«å……åˆ°è¾“å…¥æ¡†ï¼');
                });
            });
            
            function convertConfig() {
                // éšè—æ¶ˆæ¯
                hideMessages();
                
                const configStr = configInput.value.trim();
                
                if (!configStr) {
                    showError('è¯·è¾“å…¥é…ç½®å­—ç¬¦ä¸²');
                    return;
                }
                
                try {
                    // æå–é…ç½®ä¿¡æ¯
                    const configInfo = extractTrojanInfo(configStr);
                    
                    // æ˜¾ç¤ºæå–çš„é…ç½®ä¿¡æ¯
                    displayExtractedInfo(configInfo);
                    
                    // æ£€æŸ¥å¿…è¦å­—æ®µ
                    if (!configInfo.protocol || configInfo.protocol.toLowerCase() !== 'trojan') {
                        showError('åè®®é”™è¯¯ï¼å¿…é¡»ä¸º "trojan"');
                        return;
                    }
                    
                    if (!configInfo.host) {
                        showError('æœªæ‰¾åˆ°æœåŠ¡å™¨åœ°å€ï¼ˆåŸŸå/IPï¼‰');
                        return;
                    }
                    
                    if (!configInfo.port) {
                        showError('æœªæ‰¾åˆ°ç«¯å£å·');
                        return;
                    }
                    
                    if (!configInfo.password) {
                        showError('æœªæ‰¾åˆ°å¯†ç ');
                        return;
                    }
                    
                    // åˆ›å»ºTrojané“¾æ¥
                    const trojanUrl = createTrojanLink(configInfo);
                    
                    // æ˜¾ç¤ºç»“æœ
                    trojanLink.textContent = trojanUrl;
                    resultContainer.style.display = 'block';
                    showSuccess('é…ç½®è½¬æ¢æˆåŠŸï¼');
                    
                } catch (error) {
                    showError('è½¬æ¢å¤±è´¥: ' + error.message);
                }
            }
            
            function extractTrojanInfo(configStr) {
                const info = {};
                
                // è¾“å…¥æ¸…æ´—
                let cleaned = configStr.trim();
                
                // å¤„ç†å‰ç¼€ï¼ˆå¦‚ "Trojan = ", "trojan:"ï¼Œä¸åŒºåˆ†å¤§å°å†™ï¼‰
                const prefixPattern = /^trojan\s*[=:]\s*/i;
                cleaned = cleaned.replace(prefixPattern, '');
                
                // ç§»é™¤æ‰€æœ‰ç©ºç™½ï¼ˆåŒ…æ‹¬å…¨è§’ç©ºæ ¼ï¼‰
                cleaned = cleaned.replace(/[\sã€€]/g, '');
                
                // ç»Ÿä¸€åˆ†éš”ç¬¦ä¸ºè‹±æ–‡é€—å·ï¼ˆå¤„ç†ä¸­æ–‡é€—å·ï¼‰
                cleaned = cleaned.replace(/[,ï¼Œ]/g, ',');
                
                // å‚æ•°åˆ†å‰²
                const parts = cleaned.split(',').filter(p => p);
                
                if (parts.length < 4) {
                    throw new Error(
                        'å‚æ•°æ•°é‡ä¸è¶³ï¼éœ€è¦è‡³å°‘åŒ…å«4ä¸ªæ ¸å¿ƒéƒ¨åˆ†ï¼š\n' +
                        'åè®®, åŸŸå/IP, ç«¯å£, password=å¯†ç '
                    );
                }
                
                // æå–æ ¸å¿ƒå‚æ•°
                info.protocol = parts[0];
                info.host = parts[1];
                info.port = parts[2];
                
                // æå–å¯†ç 
                const passwordPart = parts[3];
                if (!passwordPart.toLowerCase().startsWith('password=')) {
                    throw new Error('å¯†ç æ ¼å¼é”™è¯¯ï¼å¿…é¡»ä»¥ "password=" å¼€å¤´');
                }
                info.password = passwordPart.split('=')[1];
                
                // æå–é¢å¤–å‚æ•°
                info.extraParams = {};
                for (let i = 4; i < parts.length; i++) {
                    const part = parts[i];
                    if (part.includes('=')) {
                        const [key, value] = part.split('=', 2);
                        info.extraParams[key.toLowerCase()] = value;
                    }
                }
                
                return info;
            }
            
            function createTrojanLink(configInfo) {
                // é»˜è®¤å‚æ•°
                const defaultParams = {
                    'allowInsecure': '1',
                    'type': 'tcp'
                };
                
                // åˆå¹¶å‚æ•°ï¼ˆç”¨æˆ·å‚æ•°è¦†ç›–é»˜è®¤å‚æ•°ï¼‰
                const queryParams = {...defaultParams, ...configInfo.extraParams};
                
                // æ„å»ºæŸ¥è¯¢å­—ç¬¦ä¸²
                const queryString = Object.entries(queryParams)
                    .map(([key, value]) => `${key}=${value}`)
                    .join('&');
                
                // æ„å»ºTrojané“¾æ¥
                return `trojan://${configInfo.password}@${configInfo.host}:${configInfo.port}/?${queryString}#TrojanèŠ‚ç‚¹`;
            }
            
            function displayExtractedInfo(configInfo) {
                let html = '';
                
                // æ˜¾ç¤ºæ ¸å¿ƒå‚æ•°
                const coreParams = [
                    { label: 'åè®®', value: configInfo.protocol },
                    { label: 'æœåŠ¡å™¨', value: configInfo.host },
                    { label: 'ç«¯å£', value: configInfo.port },
                    { label: 'å¯†ç ', value: configInfo.password }
                ];
                
                coreParams.forEach(param => {
                    html += `
                        <div class="info-item">
                            <div class="info-label">${param.label}:</div>
                            <div class="info-value">${param.value}</div>
                        </div>
                    `;
                });
                
                // æ˜¾ç¤ºé¢å¤–å‚æ•°
                if (Object.keys(configInfo.extraParams).length > 0) {
                    html += `<div class="info-item"><div class="info-label" style="margin-top:10px;">é¢å¤–å‚æ•°:</div></div>`;
                    
                    for (const [key, value] of Object.entries(configInfo.extraParams)) {
                        html += `
                            <div class="info-item">
                                <div class="info-label" style="padding-left:20px;">${key}:</div>
                                <div class="info-value">${value}</div>
                            </div>
                        `;
                    }
                }
                
                extractedInfo.innerHTML = html;
            }
            
            function copyTrojanLink() {
                const text = trojanLink.textContent;
                
                if (!text) {
                    showError('æ²¡æœ‰å¯å¤åˆ¶çš„å†…å®¹');
                    return;
                }
                
                navigator.clipboard.writeText(text).then(() => {
                    showSuccess('é“¾æ¥å·²å¤åˆ¶åˆ°å‰ªè´´æ¿ï¼');
                    
                    // ä¸´æ—¶æ”¹å˜æŒ‰é’®æ–‡æœ¬
                    const originalText = copyBtn.innerHTML;
                    copyBtn.innerHTML = '<span class="icon">âœ…</span> å·²å¤åˆ¶!';
                    
                    setTimeout(() => {
                        copyBtn.innerHTML = originalText;
                    }, 2000);
                }).catch(err => {
                    console.error('å¤åˆ¶å¤±è´¥: ', err);
                    showError('å¤åˆ¶å¤±è´¥ï¼Œè¯·æ‰‹åŠ¨å¤åˆ¶é“¾æ¥');
                });
            }
            
            function clearInput() {
                configInput.value = '';
                hideMessages();
                resultContainer.style.display = 'none';
                showSuccess('è¾“å…¥å·²æ¸…ç©ºï¼');
            }
            
            function showError(message) {
                errorMessage.textContent = message;
                errorMessage.style.display = 'block';
                resultContainer.style.display = 'none';
                successMessage.style.display = 'none';
            }
            
            function showSuccess(message) {
                successMessage.textContent = message;
                successMessage.style.display = 'block';
                errorMessage.style.display = 'none';
            }
            
            function hideMessages() {
                errorMessage.style.display = 'none';
                successMessage.style.display = 'none';
            }
        });
    </script>
</body>

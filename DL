    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 存储原始工具名称，用于搜索后恢复
            const originalToolNames = {};
            
            // 折叠功能
            const sectionHeaders = document.querySelectorAll('.section-header');
            
            sectionHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    const section = this.parentElement;
                    section.classList.toggle('collapsed');
                });
            });
            
            // 展开所有按钮
            document.getElementById('expand-all').addEventListener('click', function() {
                document.querySelectorAll('.section').forEach(section => {
                    section.classList.remove('collapsed');
                });
            });
            
            // 折叠所有按钮
            document.getElementById('collapse-all').addEventListener('click', function() {
                document.querySelectorAll('.section').forEach(section => {
                    section.classList.add('collapsed');
                });
            });
            
            // 搜索功能
            const searchInput = document.getElementById('search-input');
            const searchResults = document.getElementById('search-results');
            const toolLists = document.querySelectorAll('.tool-list');
            
            // 存储所有工具数据
            const toolsData = [];
            toolLists.forEach(list => {
                const items = list.querySelectorAll('li');
                
                items.forEach(item => {
                    const link = item.querySelector('a');
                    const name = link.textContent;
                    const url = link.href;
                    
                    // 保存原始文本内容
                    originalToolNames[url] = name;
                    
                    toolsData.push({
                        name: name,
                        url: url,
                        element: item
                    });
                });
            });
            
            // 搜索功能实现
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                let resultsCount = 0;
                
                if (searchTerm.length === 0) {
                    // 显示所有项目
                    toolsData.forEach(tool => {
                        tool.element.style.display = '';
                        const link = tool.element.querySelector('a');
                        link.innerHTML = originalToolNames[tool.url]; // 恢复原始名称
                    });
                    searchResults.textContent = '';
                    return;
                }
                
                // 搜索匹配的工具
                toolsData.forEach(tool => {
                    const toolName = tool.name.toLowerCase();
                    
                    if (toolName.includes(searchTerm)) {
                        // 显示包含匹配项的section
                        const section = tool.element.closest('.section');
                        section.classList.remove('collapsed');
                        
                        // 高亮匹配的文本
                        const link = tool.element.querySelector('a');
                        const originalText = originalToolNames[tool.url];
                        
                        // 添加新的高亮
                        const regex = new RegExp(`(${searchTerm})`, 'gi');
                        link.innerHTML = originalText.replace(regex, '<span class="highlight">$1</span>');
                        
                        // 显示匹配的项目
                        tool.element.style.display = '';
                        resultsCount++;
                    } else {
                        // 隐藏不匹配的项目
                        tool.element.style.display = 'none';
                    }
                });
                
                // 更新搜索结果计数
                if (resultsCount > 0) {
                    searchResults.textContent = `找到 ${resultsCount} 个匹配的工具`;
                } else {
                    searchResults.textContent = `没有找到匹配的工具`;
                }
            });
            
            // 页面加载后显示TG频道提示
            setTimeout(() => {
                Swal.fire({
                    title: '加入官方TG频道',
                    html: `
                    <div style="text-align:center;padding:0.8rem">
                        <h3 style="margin-bottom:0.8rem;color:#2c3e50">@iOSAWJ</h3>
                        <p style="margin-bottom:1rem">获取最新工具和更新</p>
                        <a href="https://t.me/iOSAWJ" target="_blank" style="display:inline-block;background:#0088cc;color:white;padding:0.6rem 1.2rem;border-radius:6px;text-decoration:none;font-weight:500;font-size:0.8rem">立即加入</a>
                    </div>
                    `,
                    showCloseButton: true,
                    confirmButtonText: '好的',
                    background: '#f8f9fa',
                    width: window.innerWidth > 768 ? 400 : '90%',
                });
            }, 1000);
        });
    </script>
</body>
</html>
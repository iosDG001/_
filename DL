    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 搜索功能
            const searchInput = document.getElementById('search-input');
            const searchResults = document.getElementById('search-results');
            const cards = document.querySelectorAll('.card');
            const platformLists = document.querySelectorAll('.platform-list');
            
            // 存储所有工具数据
            const toolsData = [];
            cards.forEach(card => {
                const platform = card.querySelector('.card-header h3').textContent.trim();
                const items = card.querySelectorAll('.platform-list li');
                
                items.forEach(item => {
                    const link = item.querySelector('a');
                    const name = link.textContent.replace(/\s*\$\d+\.\d+/, '').replace(/\s*免费/, '').trim(); // 移除价格信息
                    const url = link.href;
                    const price = item.querySelector('.price') ? item.querySelector('.price').textContent : '免费';
                    
                    toolsData.push({
                        name: name,
                        platform: platform,
                        url: url,
                        price: price,
                        element: item
                    });
                });
            });
            
            // 搜索功能实现
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                let resultsCount = 0;
                
                if (searchTerm.length === 0) {
                    // 显示所有卡片和项目
                    cards.forEach(card => {
                        card.style.display = '';
                        card.querySelectorAll('.platform-list li').forEach(item => {
                            item.style.display = '';
                        });
                    });
                    searchResults.textContent = '';
                    return;
                }
                
                // 首先隐藏所有卡片
                cards.forEach(card => {
                    card.style.display = 'none';
                });
                
                // 搜索匹配的工具
                toolsData.forEach(tool => {
                    const toolName = tool.name.toLowerCase();
                    const platform = tool.platform.toLowerCase();
                    
                    if (toolName.includes(searchTerm) || platform.includes(searchTerm)) {
                        // 显示包含匹配项的卡片
                        const card = tool.element.closest('.card');
                        card.style.display = '';
                        
                        // 高亮匹配的文本
                        const link = tool.element.querySelector('a');
                        const originalText = link.innerHTML;
                        
                        // 移除之前的高亮
                        link.innerHTML = originalText.replace(/<span class="highlight">(.*?)<\/span>/g, '$1');
                        
                        // 添加新的高亮
                        if (toolName.includes(searchTerm)) {
                            const regex = new RegExp(`(${searchTerm})`, 'gi');
                            link.innerHTML = link.innerHTML.replace(regex, '<span class="highlight">$1</span>');
                        }
                        
                        // 显示匹配的项目
                        tool.element.style.display = '';
                        resultsCount++;
                    } else {
                        // 隐藏不匹配的项目
                        tool.element.style.display = 'none';
                    }
                });
                
                // 更新搜索结果计数
                if (resultsCount > 0) {
                    searchResults.textContent = `找到 ${resultsCount} 个匹配的工具`;
                } else {
                    searchResults.textContent = `没有找到匹配的工具`;
                }
                
                // 隐藏没有可见项目的卡片
                cards.forEach(card => {
                    const visibleItems = card.querySelectorAll('.platform-list li[style=""]').length + 
                                        card.querySelectorAll('.platform-list li:not([style])').length;
                    if (visibleItems === 0) {
                        card.style.display = 'none';
                    }
                });
            });
            
            // SweetAlert 提示
            Swal.fire({
                html: `
                <div style="text-align:center;padding:1rem">
                    <h3 style="margin-bottom:1rem;color:#2c3e50">欢迎访问代理工具集合</h3>
                    <p style="margin-bottom:1.5rem">本站官方TG频道：</p>
                    <a href="https://t.me/iOSAWJ" target="_blank" style="display:inline-block;background:#3498db;color:white;padding:0.8rem 1.5rem;border-radius:8px;text-decoration:none;font-weight:500;margin-bottom:1rem">点击加入</a>
                    <p style="font-size:0.9rem;color:#666;margin-top:1rem">本站提供80+代理工具，覆盖12个平台</p>
                </div>
                `,
                showCloseButton: true,
                confirmButtonText: '开始浏览',
                background: '#f8f9fa',
                customClass: {
                    popup: 'sweet-popup'
                }
            });
        });
    </script>
</body>
</html>